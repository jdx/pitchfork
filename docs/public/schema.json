{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Pitchfork Configuration",
  "description": "Configuration schema for pitchfork.toml daemon supervisor configuration files.\n\nNote: When read from a file, daemon keys are short names (e.g., \"api\").\nAfter merging, keys become qualified DaemonIds (e.g., \"project/api\").",
  "type": "object",
  "properties": {
    "daemons": {
      "description": "Map of daemon IDs to their configurations",
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[\\w.-]+/[\\w.-]+$": {
          "$ref": "#/$defs/PitchforkTomlDaemon"
        }
      }
    },
    "settings": {
      "description": "Settings configuration (merged from all config files)",
      "$ref": "#/$defs/Settings",
      "default": {
        "general": {
          "autostop_delay": "1m",
          "interval": "10s",
          "log_file_level": "info",
          "log_level": "info"
        },
        "ipc": {
          "connect_attempts": 5,
          "connect_max_delay": "1s",
          "connect_min_delay": "100ms",
          "connect_timeout": "5s",
          "rate_limit": 100,
          "rate_limit_window": "1s",
          "request_timeout": "5s"
        },
        "supervisor": {
          "cron_check_interval": "10s",
          "file_watch_debounce": "1s",
          "http_client_timeout": "5s",
          "log_flush_interval": "500ms",
          "ready_check_interval": "500ms",
          "restart_delay": "100ms",
          "stop_timeout": "5s"
        },
        "tui": {
          "message_duration": "3s",
          "refresh_rate": "2s",
          "stat_history": 60,
          "tick_rate": "100ms"
        },
        "web": {
          "auto_start": false,
          "bind_address": "127.0.0.1",
          "default_port": 3120,
          "log_lines": 100,
          "port_attempts": 10,
          "sse_poll_interval": "500ms"
        }
      }
    }
  },
  "required": [
    "daemons"
  ],
  "$defs": {
    "CronRetrigger": {
      "description": "Retrigger behavior for cron-scheduled daemons",
      "oneOf": [
        {
          "description": "Retrigger only if the previous run has finished (success or error)",
          "type": "string",
          "const": "finish"
        },
        {
          "description": "Always retrigger, stopping the previous run if still active",
          "type": "string",
          "const": "always"
        },
        {
          "description": "Retrigger only if the previous run succeeded",
          "type": "string",
          "const": "success"
        },
        {
          "description": "Retrigger only if the previous run failed",
          "type": "string",
          "const": "fail"
        }
      ]
    },
    "DaemonId": {
      "description": "Daemon ID in the format 'namespace/name'",
      "type": "string",
      "pattern": "^[\\w.-]+/[\\w.-]+$"
    },
    "PitchforkTomlAuto": {
      "description": "Automatic behavior triggered by shell hooks",
      "oneOf": [
        {
          "description": "Automatically start when entering the directory",
          "type": "string",
          "const": "start"
        },
        {
          "description": "Automatically stop when leaving the directory",
          "type": "string",
          "const": "stop"
        }
      ]
    },
    "PitchforkTomlCron": {
      "description": "Cron scheduling configuration",
      "type": "object",
      "properties": {
        "retrigger": {
          "description": "Behavior when cron triggers while previous run is still active",
          "$ref": "#/$defs/CronRetrigger",
          "default": "finish"
        },
        "schedule": {
          "description": "Cron expression (e.g., '0 * * * *' for hourly, '*/5 * * * *' for every 5 minutes)",
          "type": "string",
          "examples": [
            "0 * * * *"
          ]
        }
      },
      "required": [
        "schedule"
      ]
    },
    "PitchforkTomlDaemon": {
      "description": "Configuration for a single daemon (internal representation with DaemonId)",
      "type": "object",
      "properties": {
        "auto": {
          "description": "Automatic start/stop behavior based on shell hooks",
          "type": "array",
          "items": {
            "$ref": "#/$defs/PitchforkTomlAuto"
          }
        },
        "boot_start": {
          "description": "Whether to start this daemon automatically on system boot",
          "type": [
            "boolean",
            "null"
          ]
        },
        "cron": {
          "description": "Cron scheduling configuration for periodic execution",
          "anyOf": [
            {
              "$ref": "#/$defs/PitchforkTomlCron"
            },
            {
              "type": "null"
            }
          ]
        },
        "depends": {
          "description": "List of daemon IDs that must be started before this one",
          "type": "array",
          "items": {
            "$ref": "#/$defs/DaemonId"
          }
        },
        "dir": {
          "description": "Working directory for the daemon. Relative paths are resolved from the pitchfork.toml location.",
          "type": [
            "string",
            "null"
          ]
        },
        "env": {
          "description": "Environment variables to set for the daemon process",
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "string"
          }
        },
        "on_cron_trigger": {
          "description": "Command to run when cron triggers (before starting the daemon)",
          "type": [
            "string",
            "null"
          ]
        },
        "on_fail": {
          "description": "Command to run when the daemon fails (exits with non-zero code)",
          "type": [
            "string",
            "null"
          ]
        },
        "on_ready": {
          "description": "Command to run when the daemon passes its ready check",
          "type": [
            "string",
            "null"
          ]
        },
        "on_retry": {
          "description": "Command to run before each retry attempt",
          "type": [
            "string",
            "null"
          ]
        },
        "ready_cmd": {
          "description": "Shell command to poll for readiness (exit code 0 = ready)",
          "type": [
            "string",
            "null"
          ]
        },
        "ready_delay": {
          "description": "Delay in seconds before considering the daemon ready",
          "type": [
            "integer",
            "null"
          ],
          "format": "uint64",
          "minimum": 0
        },
        "ready_http": {
          "description": "HTTP URL to poll for readiness (expects 2xx response)",
          "type": [
            "string",
            "null"
          ]
        },
        "ready_output": {
          "description": "Regex pattern to match in stdout/stderr to determine readiness",
          "type": [
            "string",
            "null"
          ]
        },
        "ready_port": {
          "description": "TCP port to check for readiness (connection success = ready)",
          "type": [
            "integer",
            "null"
          ],
          "format": "uint16",
          "maximum": 65535,
          "minimum": 1
        },
        "retry": {
          "description": "Number of times to retry if the daemon fails.\nCan be a number (e.g., `3`) or `true` for infinite retries.",
          "$ref": "#/$defs/Retry"
        },
        "run": {
          "description": "The command to run. Prepend with 'exec' to avoid shell process overhead.",
          "type": "string",
          "examples": [
            "exec node server.js"
          ]
        },
        "watch": {
          "description": "File patterns to watch for changes",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "run",
        "auto",
        "retry",
        "depends",
        "watch"
      ]
    },
    "Retry": {
      "description": "Retry configuration that accepts either a boolean or a count.\n- `true` means retry indefinitely (u32::MAX)\n- `false` or `0` means no retries\n- A number means retry that many times",
      "type": "integer",
      "format": "uint32",
      "minimum": 0
    },
    "Settings": {
      "type": "object",
      "properties": {
        "general": {
          "$ref": "#/$defs/SettingsGeneral",
          "default": {
            "autostop_delay": "1m",
            "interval": "10s",
            "log_file_level": "info",
            "log_level": "info"
          }
        },
        "ipc": {
          "$ref": "#/$defs/SettingsIpc",
          "default": {
            "connect_attempts": 5,
            "connect_max_delay": "1s",
            "connect_min_delay": "100ms",
            "connect_timeout": "5s",
            "rate_limit": 100,
            "rate_limit_window": "1s",
            "request_timeout": "5s"
          }
        },
        "supervisor": {
          "$ref": "#/$defs/SettingsSupervisor",
          "default": {
            "cron_check_interval": "10s",
            "file_watch_debounce": "1s",
            "http_client_timeout": "5s",
            "log_flush_interval": "500ms",
            "ready_check_interval": "500ms",
            "restart_delay": "100ms",
            "stop_timeout": "5s"
          }
        },
        "tui": {
          "$ref": "#/$defs/SettingsTui",
          "default": {
            "message_duration": "3s",
            "refresh_rate": "2s",
            "stat_history": 60,
            "tick_rate": "100ms"
          }
        },
        "web": {
          "$ref": "#/$defs/SettingsWeb",
          "default": {
            "auto_start": false,
            "bind_address": "127.0.0.1",
            "default_port": 3120,
            "log_lines": 100,
            "port_attempts": 10,
            "sse_poll_interval": "500ms"
          }
        }
      }
    },
    "SettingsGeneral": {
      "type": "object",
      "properties": {
        "autostop_delay": {
          "description": "Delay before auto-stopping daemons when leaving a directory",
          "type": "string",
          "default": "1m"
        },
        "interval": {
          "description": "Supervisor background task refresh interval",
          "type": "string",
          "default": "10s"
        },
        "log_file_level": {
          "description": "File log level (trace, debug, info, warn, error)",
          "type": "string",
          "default": "info"
        },
        "log_level": {
          "description": "Console log level (trace, debug, info, warn, error)",
          "type": "string",
          "default": "info"
        }
      }
    },
    "SettingsIpc": {
      "type": "object",
      "properties": {
        "connect_attempts": {
          "description": "Number of connection retry attempts",
          "type": "integer",
          "format": "int64",
          "default": 5
        },
        "connect_max_delay": {
          "description": "Maximum delay between connection retries",
          "type": "string",
          "default": "1s"
        },
        "connect_min_delay": {
          "description": "Minimum delay between connection retries",
          "type": "string",
          "default": "100ms"
        },
        "connect_timeout": {
          "description": "Total timeout for connecting to the supervisor",
          "type": "string",
          "default": "5s"
        },
        "rate_limit": {
          "description": "Maximum IPC requests per second per connection",
          "type": "integer",
          "format": "int64",
          "default": 100
        },
        "rate_limit_window": {
          "description": "Rate limit sliding window duration",
          "type": "string",
          "default": "1s"
        },
        "request_timeout": {
          "description": "Default timeout for IPC requests",
          "type": "string",
          "default": "5s"
        }
      }
    },
    "SettingsSupervisor": {
      "type": "object",
      "properties": {
        "cron_check_interval": {
          "description": "Interval for checking cron schedules",
          "type": "string",
          "default": "10s"
        },
        "file_watch_debounce": {
          "description": "File watch debounce duration",
          "type": "string",
          "default": "1s"
        },
        "http_client_timeout": {
          "description": "Timeout for HTTP ready checks",
          "type": "string",
          "default": "5s"
        },
        "log_flush_interval": {
          "description": "Daemon log buffer flush interval",
          "type": "string",
          "default": "500ms"
        },
        "ready_check_interval": {
          "description": "Interval between ready checks (HTTP, TCP, command)",
          "type": "string",
          "default": "500ms"
        },
        "restart_delay": {
          "description": "Delay between stop and start during restart",
          "type": "string",
          "default": "100ms"
        },
        "stop_timeout": {
          "description": "Maximum time to wait for daemon to stop gracefully",
          "type": "string",
          "default": "5s"
        }
      }
    },
    "SettingsTui": {
      "type": "object",
      "properties": {
        "message_duration": {
          "description": "Status message display duration",
          "type": "string",
          "default": "3s"
        },
        "refresh_rate": {
          "description": "Daemon list refresh interval",
          "type": "string",
          "default": "2s"
        },
        "stat_history": {
          "description": "Number of stat samples to keep for graphs",
          "type": "integer",
          "format": "int64",
          "default": 60
        },
        "tick_rate": {
          "description": "Event loop tick rate",
          "type": "string",
          "default": "100ms"
        }
      }
    },
    "SettingsWeb": {
      "type": "object",
      "properties": {
        "auto_start": {
          "description": "Automatically start web UI when supervisor starts",
          "type": "boolean",
          "default": false
        },
        "bind_address": {
          "description": "Web server bind address",
          "type": "string",
          "default": "127.0.0.1"
        },
        "default_port": {
          "description": "Default web server port",
          "type": "integer",
          "format": "int64",
          "default": 3120
        },
        "log_lines": {
          "description": "Initial number of log lines to display",
          "type": "integer",
          "format": "int64",
          "default": 100
        },
        "port_attempts": {
          "description": "Number of ports to try if default is in use",
          "type": "integer",
          "format": "int64",
          "default": 10
        },
        "sse_poll_interval": {
          "description": "Server-Sent Events poll interval for log streaming",
          "type": "string",
          "default": "500ms"
        }
      }
    }
  }
}
